<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1e352e">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guerreiros Mais Arranchados"
        android:textSize="24sp"
        android:textColor="#f3ecd6"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/preencherButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preencher Arranchamento"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/exportarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exportar Arranchamento"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome de Guerra"
                    android:textColor="#ffffff"
                    android:background="#488273"
                    android:padding="8dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NÃºmero de Arranchamentos"
                    android:textColor="#ffffff"
                    android:background="#488273"
                    android:padding="8dp"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/loadingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carregando..."
        android:textSize="24sp"
        android:textColor="#f3ecd6"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="visible"/>

</LinearLayout>
